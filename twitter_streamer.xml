      <bootclasspath refid="twitter_streamer.module.bootclasspath"/>
      <classpath refid="twitter_streamer.module.production.classpath"/>
      <src refid="twitter_streamer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.twitter_streamer"/>
    </javac2>
    
    <copy todir="${twitter_streamer.output.dir}">
      <fileset dir="/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.twitter_streamer.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.twitter_streamer.tests" depends="register.custom.compilers,compile.module.twitter_streamer.production" description="compile module twitter_streamer; test classes" unless="skip.tests">
    <mkdir dir="${twitter_streamer.testoutput.dir}"/>
    <javac2 destdir="${twitter_streamer.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.twitter_streamer}/javac">
      <compilerarg line="${compiler.args.twitter_streamer}"/>
      <bootclasspath refid="twitter_streamer.module.bootclasspath"/>
      <classpath refid="twitter_streamer.module.classpath"/>
      <src refid="twitter_streamer.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.twitter_streamer"/>
    </javac2>
    
    <copy todir="${twitter_streamer.testoutput.dir}">
      <fileset dir="${module.twitter_streamer.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
