  <target name="compile.module.twitter_streamer" depends="compile.module.twitter_streamer.production,compile.module.twitter_streamer.tests" description="Compile module twitter_streamer"/>
  
  <target name="compile.module.twitter_streamer.production" depends="register.custom.compilers" description="Compile module twitter_streamer; production classes">
    <mkdir dir="${twitter_streamer.output.dir}"/>
    <javac2 destdir="${twitter_streamer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.twitter_streamer}/javac">
